def sum_of_natural_numbers(n):
    # Initialize sum to 0
    total_sum = 0

    # Iterate from 1 to n and add each number to the total sum
    for i in range(1, n + 1):
        total_sum += i

    return total_sum

# Take input n
n = int(input("Enter the value of n: "))

# Calculate the sum
result = sum_of_natural_numbers(n)

# Print the sum
print("The sum of the series is:", result)